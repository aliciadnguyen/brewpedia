link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css" rel="stylesheet"
/! Section: intro
section#intro.intro
  .slogan
    h2 WELCOME TO BREWPEDIA
    h4 A reference guide for the beer connoisseur
  .page-scroll
    a.btn.btn-circle href="#beer-types" 
      i.fa.fa-angle-double-down.animated
/! Section: about
section#beer-types.home-section.text-center
  .heading-beer-types
    .container
      .row
        .col-lg-8.col-lg-offset-2
          .wow.bounceInDown data-wow-delay="0.4s" 
            .section-heading
              h2 Beer Types
              i.fa.fa-2x.fa-angle-down
  .container
    .row
      .col-lg-2.col-lg-offset-5
        hr.marginbot-50
    .row
      - @beers.each do |b|
        .col-xs-12.col-sm-6.col-md-3
          .wow.bounceInUp data-wow-delay="0.2s" 
            a = link_to beer_path(b)
              .team.boxed-grey.red
                .inner
                  img.beer-img src="/assets/white-beer.png"
                  h1 = b.beer_style